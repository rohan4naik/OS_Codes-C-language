/* Assignment SRTF(shortest remaining time first) */

#include <stdio.h>

int main() {
    int n, time = 0, completed = 0;
    int pid[100], at[100], bt[100], rt[100], ct[100], tat[100], wt[100], done[100];

    /* Gantt chart storage */
    int gc_proc[1000];     // process at each time
    int gc_time[1000];     // time points
    int gc_index = 0;

    float total_tat = 0, total_wt = 0;

    printf("\nEnter the number of processes : ");
    scanf("%d", &n);

    for (int i = 0; i < n; i++) {
        pid[i] = i + 1;
        printf("\nProcess %d - Arrival Time : ", pid[i]);
        scanf("%d", &at[i]);
        printf("                Burst Time : ");
        scanf("%d", &bt[i]);
        rt[i] = bt[i];
        done[i] = 0;
    }

    while (completed < n) {
        int idx = -1, min_rt = 9999;

        for (int i = 0; i < n; i++) {
            if (at[i] <= time && !done[i] && rt[i] < min_rt) {
                min_rt = rt[i];
                idx = i;
            }
        }

        if (idx == -1) {
            gc_proc[gc_index] = -1;   // Idle
            gc_time[gc_index] = time;
            gc_index++;

            time++;
            continue;
        }

        gc_proc[gc_index] = pid[idx];
        gc_time[gc_index] = time;
        gc_index++;

        rt[idx]--;
        time++;

        if (rt[idx] == 0) {
            ct[idx] = time;
            tat[idx] = ct[idx] - at[idx];
            wt[idx] = tat[idx] - bt[idx];
            total_tat += tat[idx];
            total_wt += wt[idx];
            done[idx] = 1;
            completed++;
        }
    }

    /* ---- Output Table ---- */
    printf("\nProcess Scheduling using SJF Preemptive Algorithm (SRTF)\n");
    printf("\nPID	AT	BT	CT	TAT	WT\n");
    for (int i = 0; i < n; i++) {
        printf("%d	%d	%d	%d	%d	%d\n", pid[i], at[i], bt[i], ct[i], tat[i], wt[i]);
    }

    printf("\nAverage TAT : %.2f\n", total_tat / n);
    printf("Average WT : %.2f\n\n", total_wt / n);

    /* ---- Gantt Chart ---- */
    printf("\nGantt Chart:\n");

    printf("Time : ");
    for (int i = 0; i < gc_index; i++)
        printf("%d ", gc_time[i]);

    printf("%d\n", time);

    printf("Process : ");
    for (int i = 0; i < gc_index; i++) {
        if (gc_proc[i] == -1)
            printf("IDLE ");
        else
            printf("P%d ", gc_proc[i]);
    }

    printf("\n\n");

    return 0;
}
