/* Assignment FCFS */

#include <stdio.h>
 
int main()
{
        printf("\n\nProcess scheduling using FCFS Algorithm\n\n");
        int n;
        printf("Enter the number of processes : ");
        scanf("%d", &n);
 
        int pid[n], at[n], bt[n], st[n], ct[n], tat[n], wt[n];
        float avgTAT = 0, avgWT = 0;
 
        for (int i = 0; i < n; i++) {
                pid[i] = i + 1;
                printf("\nEnter arrival time of process %d : ", i + 1);
                scanf("%d", &at[i]);
                printf("Enter burst time of process %d : ", i + 1);
                scanf("%d", &bt[i]);
        }
 
        for (int i = 0; i < n - 1; i++) {
                for (int j = 0; j < n - i - 1; j++) {
                        if (at[j] > at[j + 1]) {
                                int temp;
                                temp = at[j]; at[j] = at[j + 1]; at[j + 1] = temp;
                                temp = bt[j]; bt[j] = bt[j + 1]; bt[j + 1] = temp;
                                temp = pid[j]; pid[j] = pid[j + 1]; pid[j + 1] = temp;
                        }
                }
        }
 
        st[0] = at[0];
        ct[0] = st[0] + bt[0];
 
        for (int i = 1; i < n; i++) {
        if (at[i] > ct[i - 1])
            st[i] = at[i];
        else
            st[i] = ct[i - 1];
        ct[i] = st[i] + bt[i];
    }
 
        for (int i = 0; i < n; i++) {
                tat[i] = ct[i] - at[i];
                wt[i] = tat[i] - bt[i];
                avgTAT += tat[i];
                avgWT += wt[i];
        }
 
        avgTAT /= n;
        avgWT /= n;
 
        printf("\nPID	AT	BT	ST	CT	TAT	WT\n");
        for (int i = 0; i < n; i++)
                printf("P%d	%d	%d	%d	%d	%d	%d\n", pid[i], at[i], bt[i], st[i], ct[i], tat[i], wt[i]);
 
        printf("\nAverage Turnaround Time = %.2f\nAverage Waiting Time = %.2f\n\n", avgTAT, avgWT);
 
        return 0;
}
